            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{Binding Config_AsBuildable_SofaBig, Mode=TwoWay}" Margin="15" HorizontalAlignment="Left" VerticalAlignment="Center" />
