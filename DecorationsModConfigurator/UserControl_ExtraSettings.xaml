            <CheckBox Grid.Column="1" x:Name="CB_AsBuildable_EatMyDictionDoll" Width="20" Height="20" Content="" IsChecked="{Binding AsBuildable_EatMyDictionDoll, Mode=TwoWay}">
                <CheckBox.LayoutTransform>
