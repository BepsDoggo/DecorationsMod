            <CheckBox Grid.Column="1" x:Name="CB_AsBuildable_JackSepticEyeDoll" Width="20" Height="20" Content="" IsChecked="{Binding AsBuildable_JackSepticEyeDoll, Mode=TwoWay}">
                <CheckBox.LayoutTransform>
